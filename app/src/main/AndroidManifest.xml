<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dubmania.dubsmania">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".main.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main.SearchActivity"
            android:label="@string/title_activity_search"></activity>
        <activity
            android:name=".addvideoboard.AddVideoActivity"
            android:label="@string/title_activity_add_sound"></activity>
        <activity
            android:name=".createdub.CreateDubActivity"
            android:label="@string/title_activity_create_dub"></activity>
        <activity
            android:name=".signup.SignupActivity"
            android:label="Sign Up"></activity>
        <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    </application>

</manifest>
