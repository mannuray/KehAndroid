<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dubmania.dubsmania" >

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".main.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".misc.SearchActivity"
            android:label="@string/title_activity_search"
            android:parentActivityName=".main.MainActivity" />
        <activity
            android:name=".addvideo.AddVideoActivity"
            android:label="@string/title_activity_add_sound"
            android:parentActivityName=".main.MainActivity" />
        <activity
            android:name=".createdub.CreateDubActivity"
            android:label="@string/title_activity_create_dub"
            android:parentActivityName=".main.MainActivity" />
        <activity
            android:name=".signupandlogin.SignupAndLoginActivity"
            android:label="@string/title_activity_signup"
            android:parentActivityName=".main.MainActivity" />
        <activity
            android:name=".misc.AddLanguageActivity"
            android:label="@string/title_activity_add_language"
            android:parentActivityName=".main.MainActivity" >
        </activity>
        <activity
            android:name=".misc.MyAccountActivity"
            android:label="@string/title_activity_my_account"
            android:parentActivityName=".main.MainActivity" >
        </activity>
        <activity
            android:name=".misc.AddVideoBoardActivity"
            android:label="@string/title_activity_add_video_board"
            android:parentActivityName=".main.MainActivity" >
        </activity>
        <activity
            android:name=".misc.RecordVideoActivity"
            android:label="@string/title_activity_record_video"
            android:parentActivityName=".main.MainActivity" >
        </activity>
        <activity
            android:name=".misc.ImportVideoActivity"
            android:label="@string/title_activity_import_video"
            android:parentActivityName=".main.MainActivity" >
        </activity>
        <activity
            android:name=".misc.ShareVideoActivity"
            android:label="@string/title_activity_share_video"
            android:parentActivityName=".main.MainActivity" >
        </activity>
        <activity
            android:name=".misc.PlayVideoActivity"
            android:label="@string/title_activity_play_video"
            android:parentActivityName=".main.MainActivity">
        </activity>
    </application>

</manifest>
