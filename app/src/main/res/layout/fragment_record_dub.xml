<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dubmania.vidcraft.createdub.RecordDubFragment">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_alignTop="@+id/videoView"
        android:layout_alignRight="@+id/videoView"
        android:layout_alignLeft="@+id/videoView"
        android:layout_centerHorizontal="true"
        android:indeterminate="true"
        android:layout_marginTop="88dp" />

    <com.dubmania.vidcraft.utils.media.CreateDubMediaControl
        android:id="@+id/mediaControl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/videoView"/>


</RelativeLayout>
