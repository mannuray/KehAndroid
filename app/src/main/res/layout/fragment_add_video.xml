<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.dubmania.dubsmania.main.AddVideoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:id="@+id/add_video_record_button"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/record_video_microphone"
            android:text="Record Video Sound"
            android:textAllCaps="false"
            android:elevation="10dp"
            android:layout_marginTop="50dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:id="@+id/add_video_import_button"
            android:layout_below="@+id/add_video_record_button"
            android:layout_alignLeft="@+id/add_video_record_button"
            android:layout_alignStart="@+id/add_video_record_button"
            android:drawableLeft="@drawable/ic_upload_video_24dp"
            android:text="Import video"
            android:textAllCaps="false"
            android:elevation="10dp"
            android:layout_marginTop="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/add_video_method_question"
            android:id="@+id/textView2"
            android:layout_marginTop="140dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/add_video_record_button"
            android:layout_alignStart="@+id/add_video_record_button"
            android:layout_alignRight="@+id/add_video_record_button"
            android:layout_alignEnd="@+id/add_video_record_button" />

    </RelativeLayout>

</LinearLayout>
